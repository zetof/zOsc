#:import Hslider components.hslider

<Hslider>:
    rows: 1
    widget_name: 'h_slider_default'
    widget_label: ''
    widget_label_color: .75, .75, .75
    widget_color: 1, 1, 1
    widget_value: 50
    osc_group: ''
    canvas:
        Color:
            rgba: self.widget_color + [.5]
        RoundedRectangle:
            pos: (self.x, self.y)
            size: (self.width * self.widget_value / 100, self.height)
        Color:
            rgb: self.widget_color
        RoundedRectangle:
            pos: (self.x + (self.width - 30) * self.widget_value / 100, self.y)
            size: (30, self.height)
        Color:
            rgba: self.widget_color + [.6]
        Line:
            width: 2
            rounded_rectangle: (self.x, self.y, self.width, self.height, 10, 10, 10, 10)
    Label:
        color: root.widget_label_color + [1]
        text: root.widget_label