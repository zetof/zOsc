<Group@BoxLayout>:
    padding: 15
    spacing: 15
    orientation: 'vertical'
    widget_label: ''
    widget_label_color: 0, 0, 0
    widget_color: 1, 1, 1
    canvas:
        Color:
            rgb: self.widget_color
        Line:
            width: 2
            rounded_rectangle: (self.x, self.y, self.width, self.height, 10, 10, 10, 10)
    Label:
        canvas:
            Color:
                rgba: root.widget_color + [.3]
            Rectangle:
                pos: self.x, self.y
                size: self.width, self.height
        color: (1, 1, 1, 1)
        size_hint_y: None
        height:35
        text: root.widget_label

