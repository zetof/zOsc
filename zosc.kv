<Table>:
    rows: 1
    Synth:
        osc_group: 'synth_1'

<Synth@GridLayout>:
    cols: 3
    padding: 10
    spacing: 10
    osc_group: ''
    Vslider:
        size_hint_x: .35
        width: 50
        widget_value: 25
        widget_color: 1, .5, 0
        widget_name: 'vol'
        widget_label: 'vol'
        osc_group: root.osc_group
        widget_color: 0, .5, 1
    GridLayout:
        size_hint_x: 1.5
        rows: 2
        padding: 5
        spacing: 5
        Oscillator:
            widget_width: 60

            osc_group: root.osc_group
        Adsr:
            osc_group: root.osc_group
    GridLayout:
        size_hint_x: 3
        rows: 4
        padding: 5
        spacing: 5
        SubSynth:
            osc_group: root.osc_group
            sub_nbr: '1'
        SubSynth:
            osc_group: root.osc_group
            sub_nbr: '2'
        SubSynth:
            osc_group: root.osc_group
            sub_nbr: '3'
        SubSynth:
            osc_group: root.osc_group
            sub_nbr: '4'

<SubSynth@GridLayout>:
    cols: 6
    padding: 15
    spacing: 15
    osc_group: ''
    sub_nbr: ''
    OnOff:
        osc_group: root.osc_group
        sub_nbr: root.sub_nbr
    Oscillator:
        osc_group: root.osc_group
        sub_nbr: root.sub_nbr
    Detune:
        osc_group: root.osc_group
        sub_nbr: root.sub_nbr
        slider_name: 'mul_coarse'
        widget_label: 'x crse'
    Detune:
        osc_group: root.osc_group
        sub_nbr: root.sub_nbr
        slider_name: 'mul_fine'
        widget_label: 'x fine'
    Detune:
        osc_group: root.osc_group
        sub_nbr: root.sub_nbr
        slider_name: 'off_coarse'
        widget_label: '+ crse'
    Detune:
        osc_group: root.osc_group
        sub_nbr: root.sub_nbr
        slider_name: 'off_fine'
        widget_label: '+ fine'

<OnOff@Toggle>:
    osc_group: ''
    sub_nbr: ''
    widget_name: 'on_' + root.sub_nbr
    widget_label: 'on'
    widget_color: .75, .65, 0
    osc_group: root.osc_group

<Oscillator@Selector>:
    osc_group: ''
    sub_nbr: ''
    widget_name: 'oscillator_' + root.sub_nbr
    widget_choices: 4
    widget_width: 20
    widget_labels: ('sin', 'saw', 'sqr', 'nse')
    widget_color: .75, 0, .25
    osc_group: root.osc_group

<Detune@Rslider>:
    osc_group: ''
    sub_nbr: ''
    slider_name: ''
    widget_width: 20
    widget_name: root.slider_name + '_' + root.sub_nbr
    widget_sensibility: 1
    widget_label: 'off fn'
    widget_color: .2, .5, .75
    osc_group: root.osc_group
