<Vslider>:
    size_hint_x: None
    width: 100
    widget_value: 50
    canvas:
        Color:
            rgba: 1, .5, 0, .5
        RoundedRectangle:
            pos: (self.x, self.y)
            size: (self.width, self.height * self.widget_value / 100)
        Color:
            rgb: 1, .5, 0
        RoundedRectangle:
            pos: (self.x, self.y + (self.height - 30) * self.widget_value / 100)
            size: (self.width, 30)
        Color:
            rgba: 1, .5, 0, .6
        Line:
            width: 2
            rounded_rectangle: (self.x, self.y, self.width, self.height, 10, 10, 10, 10)

<Table>:
    cols: 2
    padding: 20
    spacing: 20
    Vslider:
        widget_name: 'slider_1'
    Vslider:
        widget_name: 'slider_2'
    Vslider:
        widget_name: 'slider_3'
    Vslider:
        widget_name: 'slider_4'
